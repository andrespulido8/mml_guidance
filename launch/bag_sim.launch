<launch>
    <!-- launch the quadcopter and the turtlebot with the guidance nodes -->
    <include file="$(find mml_guidance)/launch/visualization.launch" />

    <!-- bags topics -->
    <arg name="prefix_name" default="sim"/>
    <arg name="bag_name" default="$(find mml_guidance)/sim_data/$(arg prefix_name)"/>
    <arg name="bag_selected" default="false"/>

    <node if="$(arg bag_selected)" name="record" pkg="rosbag" type="record" args="-o $(arg bag_name) /xyTh_estimate 
        /n_eff_particles  /entropy /err_tracking /err_estimation        /eer_time /desired_state /is_update /info_gain /is_occlusion /xyTh_estimate_cov_det"/>

    <node unless="$(arg bag_selected)" name="record" pkg="rosbag" type="record" args="-o $(arg bag_name) /xyTh_estimate
        /n_eff_particles /robot0/odom /multirotor/truth/NWU /entropy /err_tracking /err_estimation
        /eer_time /desired_state /is_update /info_gain /camera/color/image_raw /fov_coord
        /is_occlusion /noisy_measurement /des_fov_coord /xyTh_predictions /xyTh_estimate_cov_det"/>
</launch>
